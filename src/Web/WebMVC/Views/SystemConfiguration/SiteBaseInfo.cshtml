@model WebMVC.ViewModels.SystemConfigurationViewModels.SiteBaseInfoViewModel
@{
    ViewData["Title"] = "SiteBaseInfo";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

    <!-- begin:: Content Head -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-container  kt-container--fluid ">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    平台基本信息
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
            </div>
            <div class="kt-subheader__toolbar">
                <a href="#" class="btn btn-default btn-bold" onclick="ReturnPreviousPage()">
                    返回
                </a>
            </div>
        </div>
    </div>

    <!-- end:: Content Head -->
    <!-- begin:: Content -->
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

        <!--Begin:: Portlet-->
        <div class="kt-portlet kt-portlet--tabs">
            <div class="kt-portlet__head">
                <div class="kt-portlet__head-toolbar">
                    <ul class="nav nav-tabs nav-tabs-space-lg nav-tabs-line nav-tabs-bold nav-tabs-line-3x nav-tabs-line-brand" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#kt_apps_contacts_view_tab_2" role="tab">
                                <i class="flaticon2-calendar-3"></i> 基本信息
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="kt-portlet__body">
                <div class="tab-content  kt-margin-t-20">

                    <!--Begin:: Tab Content-->
                    <div class="tab-pane active" id="kt_apps_contacts_view_tab_2" role="tabpanel">
                        <form asp-controller="SystemConfiguration" asp-action="SiteBaseInfo" id="kt_system_sitebaseinfo_form" class="kt-form kt-form--label-right" method="post">
                            <div class="kt-form__body">
                                <div class="kt-section kt-section--first">
                                    <div class="kt-section__body">
                                        <div class="row">
                                            <label class="col-xl-3"></label>
                                            <div class="col-lg-9 col-xl-6">
                                                <h3 class="kt-section__title kt-section__title-sm">联系信息:</h3>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">网站名称</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input asp-for="SiteTitle" class="form-control" type="text" value="@Model.SiteTitle" name="sitetitle">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">联络地址</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input asp-for="ContactAddress" class="form-control" type="text" value="@Model.ContactAddress" name="contactaddress">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">Email</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input asp-for="ContactEmail" class="form-control" type="text" value="@Model.ContactEmail" name="contactemail">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">联络号码</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input asp-for="ConsumerHotline" class="form-control" type="text" value="@Model.ConsumerHotline" name="consumerhotline">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">QQ</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input asp-for="ConsumerServiceQQ" class="form-control" type="text" value="@Model.ConsumerServiceQQ" name="consumerserviceqq">
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">Skype</label>
                                            <div class="col-lg-9 col-xl-6">
                                                <input asp-for="ConsumerServiceSkype" class="form-control" type="text" value="@Model.ConsumerServiceSkype" name="consumerserviceskype">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <label class="col-xl-3"></label>
                                            <div class="col-lg-9 col-xl-6">
                                                <h3 class="kt-section__title kt-section__title-sm">营业时间:</h3>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">开始营业</label>
                                            <div class="col-sm-3 col-sm-offset-3">
                                                <div class="input-group">
                                                    <select asp-for="BusinessHoursFrom" asp-items="@Model.BusinessHoursFroms" name="businesshoursfrom" class="form-control form-control--fixed kt-selectpicker" data-size="6" data-live-search="true">
                                                    </select>
                                                    <div class="input-group-append"><span class="input-group-text">点</span></div>&emsp;&emsp;

                                                    <select asp-for="BusinessMinutesFrom" asp-items="@Model.BusinessMinutesFroms" name="businessminutesfrom" class="form-control form-control--fixed kt-selectpicker" data-size="6" data-live-search="true">
                                                    </select>
                                                    <div class="input-group-append"><span class="input-group-text">分</span></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group form-group-last row">
                                            <label class="col-xl-3 col-lg-3 col-form-label">结束营业</label>
                                            <div class="col-sm-3 col-sm-offset-3">
                                                <div class="input-group">
                                                    <select asp-for="BusinessHoursTo" asp-items="@Model.BusinessHoursTos" name="businesshoursto" class="form-control form-control--fixed kt-selectpicker" data-size="6" data-live-search="true">
                                                    </select>
                                                    <div class="input-group-append"><span class="input-group-text">点</span></div>&emsp;&emsp;

                                                    <select asp-for="BusinessMinutesTo" asp-items="@Model.BusinessMinutesTos" name="businessminutesto" class="form-control form-control--fixed kt-selectpicker" data-size="6" data-live-search="true">
                                                    </select>
                                                    <div class="input-group-append"><span class="input-group-text">分</span></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="kt-separator kt-separator--space-lg kt-separator--fit kt-separator--border-solid"></div>
                            <div class="kt-form__actions">
                                <div class="row">
                                    <div class="col-xl-3"></div>
                                    <div class="col-lg-9 col-xl-6">
                                        <a class="btn btn-brand btn-bold text-white" data-ktwizard-type="action-submit">储存</a>
                                        <a href="#" class="btn btn-clean btn-bold" onclick="ReturnPreviousPage()">取消</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <!--End:: Tab Content-->
                </div>
            </div>
        </div>

        <!--End:: Portlet-->
    </div>

    <!-- end:: Content -->
</div>


@section Scripts{
    <script src="~/js/pages/system-configuration/edit-sitebaseinfo.js" type="text/javascript"></script>

    <script src="~/lib/metronic/dist/assets/js/pages/crud/forms/widgets/bootstrap-select.js" type="text/javascript"></script>
}