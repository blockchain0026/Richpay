@model WebMVC.ViewModels.ManagerViewModels.CreateViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">

    <!-- begin:: Content Head -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-container  kt-container--fluid ">
            <div class="kt-subheader__main">
                <h3 class="kt-subheader__title">
                    添加管理员
                </h3>
                <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                <div class="kt-subheader__group" id="kt_subheader_search">
                    <span class="kt-subheader__desc" id="kt_subheader_total">
                        填写资料并提交
                    </span>
                </div>
            </div>
            <div class="kt-subheader__toolbar">
                <a href="#" class="btn btn-default btn-bold">
                    返回
                </a>
                <div class="btn-group">
                    <button type="button" class="btn btn-brand btn-bold">
                        提交
                    </button>
                    <button type="button" class="btn btn-brand btn-bold dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Content Head -->
    <!-- begin:: Content -->
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <div class="kt-wizard-v4" id="kt_user_add_user" data-ktwizard-state="step-first">

            <!--begin: Form Wizard Nav -->
            <div class="kt-wizard-v4__nav">
                <div class="kt-wizard-v4__nav-items nav">

                    <!--doc: Replace A tag with SPAN tag to disable the step link click -->
                    <div class="kt-wizard-v4__nav-item nav-item" data-ktwizard-type="step" data-ktwizard-state="current">
                        <div class="kt-wizard-v4__nav-body">
                            <div class="kt-wizard-v4__nav-number">
                                1
                            </div>
                            <div class="kt-wizard-v4__nav-label">
                                <div class="kt-wizard-v4__nav-label-title">
                                    个人信息
                                </div>
                                <div class="kt-wizard-v4__nav-label-desc">
                                    管理员的个人信息
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="kt-wizard-v4__nav-item nav-item" data-ktwizard-type="step">
                        <div class="kt-wizard-v4__nav-body">
                            <div class="kt-wizard-v4__nav-number">
                                2
                            </div>
                            <div class="kt-wizard-v4__nav-label">
                                <div class="kt-wizard-v4__nav-label-title">
                                    帐户
                                </div>
                                <div class="kt-wizard-v4__nav-label-desc">
                                    帐户信息 & 设置
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="kt-wizard-v4__nav-item nav-item" data-ktwizard-type="step">
                        <div class="kt-wizard-v4__nav-body">
                            <div class="kt-wizard-v4__nav-number">
                                4
                            </div>
                            <div class="kt-wizard-v4__nav-label">
                                <div class="kt-wizard-v4__nav-label-title">
                                    提交
                                </div>
                                <div class="kt-wizard-v4__nav-label-desc">
                                    审查并提交
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--end: Form Wizard Nav -->
            <div class="kt-portlet">
                <div class="kt-portlet__body kt-portlet__body--fit">
                    <div class="kt-grid">
                        <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v4__wrapper">

                            <!--begin: Form Wizard Form-->
                            <form asp-controller="Manager" asp-action="Create" class="kt-form" id="kt_user_add_form" method="post">

                                <!--begin: Form Wizard Step 1-->
                                <div class="kt-wizard-v4__content" data-ktwizard-type="step-content" data-ktwizard-state="current">
                                    <div class="kt-heading kt-heading--md">管理员的详细信息:</div>
                                    <div class="kt-section kt-section--first">
                                        <div class="kt-wizard-v4__form">
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="kt-section__body">
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">真实姓名*</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <input asp-for="FullName" name="fullname" class="form-control" type="text">
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">昵称</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <input asp-for="Nickname" name="nickname" class="form-control" type="text" >
                                                                <span class="form-text text-muted">可留白并使用真实姓名。</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">手机号码*</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <div class="input-group">
                                                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-phone"></i></span></div>
                                                                    <input asp-for="PhoneNumber" name ="phonenumber" type="text" class="form-control" placeholder="Phone" aria-describedby="basic-addon1">
                                                                </div>
                                                                <span class="form-text text-muted">We'll never share your email with anyone else.</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">电子邮件*</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <div class="input-group">
                                                                    <div class="input-group-prepend"><span class="input-group-text"><i class="la la-at"></i></span></div>
                                                                    <input asp-for="Email" name="email" type="text" class="form-control" placeholder="Email" aria-describedby="basic-addon1">

                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">微信</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <input asp-for="Wechat" name ="wechat" class="form-control" type="text" >
                                                            </div>
                                                        </div><div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">QQ</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <input asp-for="QQ" name ="qq" class="form-control" type="text" >
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--end: Form Wizard Step 1-->
                                <!--begin: Form Wizard Step 2-->
                                <div class="kt-wizard-v4__content" data-ktwizard-type="step-content">
                                    <div class="kt-section kt-section--first">
                                        <div class="kt-wizard-v4__form">
                                            <div class="row">
                                                <div class="col-xl-12">
                                                    <div class="kt-section__body">
                                                        <div class="form-group row">
                                                            <div class="col-lg-9 col-xl-6">
                                                                <h3 class="kt-section__title kt-section__title-md">管理员的帐户细节:</h3>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">用户名*</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <input asp-for="Username" name="username" class="form-control" type="text" placeholder="admin@gmail.com">
                                                            </div>
                                                            <span class="form-text text-muted">用户名将用来登入帐户。 <a href="#" class="kt-link">Learn more</a>.</span>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">密码*</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <div class="input-group">
                                                                    <input asp-for="Password" name ="password" type="password" class="form-control"  placeholder="Password">
                                                                </div>
                                                                <span class="form-text text-muted">密碼需要至少6位英數。 <a href="#" class="kt-link">Learn more</a>.</span>
                                                            </div>
                                                        </div>
                                                        <div class="form-group row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">权限分配*</label>
                                                            <div class="col-lg-9 col-xl-9">
                                                                <select asp-for="RoleName" asp-items="@Model.RoleNames" name ="rolename" class="form-control">
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="form-group form-group-last row">
                                                            <label class="col-xl-3 col-lg-3 col-form-label">帐户预设启用状态</label>
                                                            <div class="col-lg-9 col-xl-6">
                                                                <div class="kt-checkbox-inline">
                                                                    <label class="kt-checkbox">
                                                                        <input asp-for="IsEnabled" type="checkbox" checked=""> 启用
                                                                        <span></span>
                                                                    </label>
                                                                </div>
                                                                <span class="form-text text-muted">如需停用请取消勾选。 <a href="#" class="kt-link">Learn more</a>.</span>
                                                            </div>
                                                        </div>
                                                        <div class="kt-separator kt-separator--border-dashed kt-separator--portlet-fit kt-separator--space-lg"></div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--end: Form Wizard Step 2-->
                                <!--begin: Form Wizard Step 4-->
                                <div class="kt-wizard-v4__content" data-ktwizard-type="step-content">
                                    <div class="kt-heading kt-heading--md">查看管理员的详细信息并提交</div>
                                    <div class="kt-form__section kt-form__section--first">
                                        <div class="kt-wizard-v4__review">
                                            <div class="kt-wizard-v4__review-item">
                                                <div class="kt-wizard-v4__review-title">
                                                    Your Account Details
                                                </div>
                                                <div class="kt-wizard-v4__review-content">
                                                    John Wick
                                                    <br /> Phone: +61412345678
                                                    <br /> Email: johnwick@reeves.com
                                                </div>
                                            </div>
                                            <div class="kt-wizard-v4__review-item">
                                                <div class="kt-wizard-v4__review-title">
                                                    Your Address Details
                                                </div>
                                                <div class="kt-wizard-v4__review-content">
                                                    Address Line 1
                                                    <br /> Address Line 2
                                                    <br /> Melbourne 3000, VIC, Australia
                                                </div>
                                            </div>
                                            <div class="kt-wizard-v4__review-item">
                                                <div class="kt-wizard-v4__review-title">
                                                    Payment Details
                                                </div>
                                                <div class="kt-wizard-v4__review-content">
                                                    Card Number: xxxx xxxx xxxx 1111
                                                    <br /> Card Name: John Wick
                                                    <br /> Card Expiry: 01/21
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--end: Form Wizard Step 4-->
                                <!--begin: Form Actions -->
                                <div class="kt-form__actions">
                                    <div class="btn btn-secondary btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" data-ktwizard-type="action-prev">
                                        上一页
                                    </div>
                                    <div class="btn btn-success btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" data-ktwizard-type="action-submit">
                                        提交
                                    </div>
                                    <div class="btn btn-brand btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" data-ktwizard-type="action-next">
                                        下一页
                                    </div>
                                </div>

                                <!--end: Form Actions -->
                            </form>

                            <!--end: Form Wizard Form-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Content -->
</div>

@section Scripts{ 
    <script src="~/lib/metronic/dist/assets/js/pages/custom/user/add-user.js" type="text/javascript"></script>
}
@section AddToHead{
    <link href="~/lib/metronic/dist/assets/css/pages/wizard/wizard-4.css" rel="stylesheet" type="text/css" />
}