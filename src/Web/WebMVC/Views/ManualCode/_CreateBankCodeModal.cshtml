                                    <div class="kt-grid__item kt-grid__item--fluid kt-wizard-v1__wrapper">

                                        <!--begin: Form Wizard Form-->
                                        <form asp-controller="ManualCode" asp-action="CreateBankCode" class="kt-form kt-p0" id="form_create_bank" method="post">

                                            <!--begin: Form Wizard Step 1-->
                                            <div class="kt-wizard-v1__content" data-ktwizard-type="step-content" data-ktwizard-state="current">
                                                <div class="kt-heading kt-heading--md">基本设置:</div>
                                                <div class="kt-section kt-section--first">
                                                    <div class="kt-wizard-v1__form">
                                                        <div class="row">
                                                            <div class="col-xl-12">
                                                                <div class="kt-section__body">
                                                                    <div class="form-group row">
                                                                        <label class="col-xl-3 col-lg-3 col-form-label">交易员*</label>
                                                                        @if (User.IsInRole(Roles.Trader))
                                                                        {
                                                                            <div class="col-lg-9 col-xl-9">
                                                                                <input class="form-control" type="text" value="@Model.UserId" name="userid" readonly>
                                                                                <span class="form-text text-muted">此为你的ID编号。</span>
                                                                            </div>
                                                                        }
                                                                        else
                                                                        {
                                                                            <div class=" col-lg-4 col-md-9 col-sm-12">
                                                                                <select class="form-control kt-select2" id="kt_select2_create_bank_trader" name="userid">
                                                                                    <option></option>
                                                                                </select>
                                                                            </div>
                                                                        }
                                                                    </div>
                                                                    <div class="form-group row">
                                                                        <label class="col-xl-3 col-lg-3 col-form-label">真实姓名*</label>
                                                                        <div class="col-lg-9 col-xl-9">
                                                                            <input name="fullname" class="form-control" type="text">
                                                                            <span class="form-text text-muted">支付应用的真实姓名。</span>
                                                                        </div>
                                                                    </div>
                                                                    @if (User.IsInRole(Roles.Manager))
                                                                    {
                                                                        <div class="form-group row">
                                                                            <label class="col-xl-3 col-lg-3 col-form-label">指定商户</label>
                                                                            <div class=" col-lg-4 col-md-9 col-sm-12">
                                                                                <select class="form-control kt-select2" id="kt_select2_create_bank_shop" name="specifiedshopid">
                                                                                    <option></option>

                                                                                </select>
                                                                                <span class="form-text text-muted">指定此二维码只接收来自指定商户的订单。</span>
                                                                            </div>
                                                                        </div>
                                                                    }

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!--end: Form Wizard Step 1-->
                                            <!--begin: Form Wizard Step 2-->
                                            <div class="kt-wizard-v1__content" data-ktwizard-type="step-content">
                                                <div class="kt-section kt-section--first">
                                                    <div class="kt-wizard-v1__form">
                                                        <div class="row">
                                                            <div class="col-xl-12">
                                                                <div class="kt-section__body">
                                                                    <div class="form-group row">
                                                                        <div class="col-lg-9 col-xl-6">
                                                                            <h3 class="kt-section__title kt-section__title-md">二维码的详细信息:</h3>
                                                                        </div>
                                                                    </div>
