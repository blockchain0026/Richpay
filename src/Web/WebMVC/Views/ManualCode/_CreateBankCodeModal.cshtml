                                                                                <option data-bankname="中国建设银行" data-bankmark="CCB">中国建设银行</option>
                                                                                <option data-bankname="汇丰银行" data-bankmark="HSBC">汇丰银行</option>
                                                                                <option data-bankname="中国银行" data-bankmark="BC">中国银行</option>
                                                                                <option data-bankname="中国农业银行" data-bankmark="ABC">中国农业银行</option>
                                                                                <option data-bankname="交通银行" data-bankmark="BC">交通银行</option>
                                                                                <option data-bankname="招商银行" data-bankmark="CMB">招商银行</option>
