<div id="modal__update_qrcode_quota" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">更新额度设定</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
            </div>
            <div class="modal-body">
                <form id="form_update_qrcode_quota" asp-controller="ManualCode" asp-action="UpdateQrCodeQuota" class="kt-form" method="post">
                    <div class="form-group">
                        <label for="userId" class="form-control-label">二维码编号 :</label>
                        <input type="text" class="form-control" name="qrcodeid" readonly>
                    </div>

                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label class="">单日限额:</label>
                            <div class="input-group">
                                <input class="form-control" placeholder="" value="5000" name="DailyAmountLimit">
                                <div class="input-group-append"><span class="input-group-text">¥</span></div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-lg-6">
                            <label class="">单笔限额:</label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text">最低</span></div>
                                <input class="form-control" placeholder="" value="1" name="OrderAmountLowerLimit">
                                <div class="input-group-append"><span class="input-group-text">¥</span></div>

                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="">&nbsp;</label>
                            <div class="input-group">
                                <div class="input-group-prepend"><span class="input-group-text">最高</span></div>
                                <input class="form-control" placeholder="" value="3000" id="update_qrcode_quota_order_amount_upper_limit" name="OrderAmountUpperLimit">
                                <div class="input-group-append"><span class="input-group-text">¥</span></div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u" data-dismiss="modal">取消</button>
                <a href="#" data-action="submit" class="btn btn-success btn-md btn-tall btn-wide kt-font-bold kt-font-transform-u">提交</a>
            </div>
        </div>
    </div>
</div>