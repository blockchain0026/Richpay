                                            <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero" />
                                        </g>
                                    </svg>
                                    <!--<i class="flaticon2-search-1"></i>-->
                                </span>
                            </span>
                        </div>
                    </form>
                    <!--end::Search Box-->
                </div>
                <div class="kt-subheader__group kt-hidden" id="kt_subheader_group_actions">
                    <div class="kt-subheader__desc"><span id="kt_subheader_group_selected_rows"></span> 快速操作:</div>
                    <div class="btn-toolbar kt-margin-l-20">
                        <button class="btn btn-label-success btn-bold btn-sm btn-icon-h" id="kt_subheader_group_actions_pairing_all">
                            批量抢卖
                        </button>
                        <button class="btn btn-label-danger btn-bold btn-sm btn-icon-h" id="kt_subheader_group_actions_stop_all">
                            停止抢单
                        </button>
                        @if (User.IsInRole(Roles.Manager))
                        {
                            <button class="btn btn-label-success btn-bold btn-sm btn-icon-h" id="kt_subheader_group_actions_enable_all">
                                全部啟用
                            </button>
                            <button class="btn btn-label-danger btn-bold btn-sm btn-icon-h" id="kt_subheader_group_actions_disable_all">
                                全部停用
                            </button>
                        }

                    </div>
                </div>
            </div>
            <div class="kt-subheader__toolbar">
                <a href="#" class="">
                </a>
                <a class="btn btn-label-brand btn-bold" data-toggle="show-modal-create-qrcode" data-user-id="@Model.UserId" data-user-base-role="@Model.UserBaseRole">
                    添加二维码
                </a>
                <div class="kt-subheader__wrapper">
                    <div class="dropdown dropdown-inline" data-toggle="kt-tooltip-" title="Quick actions" data-placement="left">
                        <a href="#" class="btn btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" class="kt-svg-icon kt-svg-icon--success kt-svg-icon--md">
                                <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                    <polygon points="0 0 24 0 24 24 0 24" />
                                    <path d="M5.85714286,2 L13.7364114,2 C14.0910962,2 14.4343066,2.12568431 14.7051108,2.35473959 L19.4686994,6.3839416 C19.8056532,6.66894833 20,7.08787823 20,7.52920201 L20,20.0833333 C20,21.8738751 19.9795521,22 18.1428571,22 L5.85714286,22 C4.02044787,22 4,21.8738751 4,20.0833333 L4,3.91666667 C4,2.12612489 4.02044787,2 5.85714286,2 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                    <path d="M11,14 L9,14 C8.44771525,14 8,13.5522847 8,13 C8,12.4477153 8.44771525,12 9,12 L11,12 L11,10 C11,9.44771525 11.4477153,9 12,9 C12.5522847,9 13,9.44771525 13,10 L13,12 L15,12 C15.5522847,12 16,12.4477153 16,13 C16,13.5522847 15.5522847,14 15,14 L13,14 L13,16 C13,16.5522847 12.5522847,17 12,17 C11.4477153,17 11,16.5522847 11,16 L11,14 Z" fill="#000000" />
                                </g>
                            </svg>

                            <!--<i class="flaticon2-plus"></i>-->
                        </a>
                        <div class="dropdown-menu dropdown-menu-fit dropdown-menu-md dropdown-menu-right">

                            <!--begin::Nav-->
                            <ul class="kt-nav">
                                <li class="kt-nav__head">
                                    添加二维码:
                                    <i class="flaticon2-information" data-toggle="kt-tooltip" data-placement="right" title="选择要添加的类型..."></i>
                                </li>
                                <li class="kt-nav__separator"></li>
                                <li class="kt-nav__item">
                                    <a href="#" class="kt-nav__link" data-toggle="show-modal-create-barcode">
                                        <i class="kt-nav__link-icon flaticon2-drop"></i>
                                        <span class="kt-nav__link-text">个码</span>
                                    </a>
                                </li>
                                <li class="kt-nav__item">
                                    <a href="#" class="kt-nav__link" data-toggle="show-modal-create-merchant">
                                        <i class="kt-nav__link-icon flaticon2-drop"></i>
                                        <span class="kt-nav__link-text">原生码</span>
                                    </a>
                                </li>
                                <li class="kt-nav__item">
                                    <a href="#" class="kt-nav__link" data-toggle="show-modal-create-transaction">
                                        <i class="kt-nav__link-icon flaticon2-drop"></i>
                                        <span class="kt-nav__link-text">支付宝转账</span>
                                    </a>
                                </li>
                                <li class="kt-nav__item">
                                    <a href="#" class="kt-nav__link" data-toggle="show-modal-create-bank">
                                        <i class="kt-nav__link-icon flaticon2-drop"></i>
                                        <span class="kt-nav__link-text">支付宝转银行</span>
                                    </a>
                                </li>
                                <li class="kt-nav__item">
                                    <a href="#" class="kt-nav__link" data-toggle="show-modal-create-envelop">
                                        <i class="kt-nav__link-icon flaticon2-drop"></i>
                                        <span class="kt-nav__link-text">支付宝红包</span>
                                    </a>
                                </li>
                                <li class="kt-nav__item">
                                    <a href="#" class="kt-nav__link" data-toggle="show-modal-create-envelop-password">
                                        <i class="kt-nav__link-icon flaticon2-drop"></i>
                                        <span class="kt-nav__link-text">支付寶口令紅包</span>
                                    </a>
                                </li>
                            </ul>

                            <!--end::Nav-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end:: Content Head -->
    <!-- begin:: Content -->
    <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
        <!--begin::Portlet-->
        <div class="kt-portlet kt-portlet--mobile">

            <!--begin::Search Filter-->

            <div class="kt-portlet__body kt-padding-t-0">
                <!--begin: Search Form -->
                <div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
                    <div class="row align-items-center">
                        <div class="col-xl-8 order-2 order-xl-1">
                            <div class="row align-items-center">
                                <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">
                                    <div class="">
                                        <div class="kt-form__label">
                                            <label>支付类型:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control bootstrap-select" id="kt_payment_channel_filter">
                                                <option value="">全部</option>
                                                <option value="Alipay">支付宝</option>
                                                <option value="Wechat">微信</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">
                                    <div class="">
                                        <div class="kt-form__label">
                                            <label>支付通道:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control bootstrap-select" id="kt_payment_scheme_filter">
                                                <option value="">全部</option>
                                                <option value="Barcode">个码</option>
                                                <option value="Merchant">原生码</option>
                                                <option value="Transaction">支转支</option>
                                                <option value="Bank">支转银</option>
                                                <option value="Envelop">红包</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">
                                    <div class="">
                                        <div class="kt-form__label">
                                            <label>启用状态:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control bootstrap-select" id="kt_qrcode_status_filter">
                                                <option value="">全部</option>
                                                <option value="Disabled">停用</option>
                                                <option value="Enabled">启用</option>
                                                <option value="AutoDisabled">自动停用</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">
                                    <div class="">
                                        <div class="kt-form__label">
                                            <label>抢单状态:</label>
                                        </div>
                                        <div class="kt-form__control">
                                            <select class="form-control bootstrap-select" id="kt_pairing_status_filter">
                                                <option value="">全部</option>
                                                <option value="NormalDisable">闲置</option>
                                                <option value="Pairing">抢单中</option>
                                                <option value="ProcessingOrder">处理订单中</option>
                                                <option value="DisableBySystem">自动封禁</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end: Search Form -->
            </div>
            <!--end::Search Filter-->
            <div class="kt-portlet__body kt-portlet__body--fit">
                <!--begin: Datatable -->
                <div class="kt-datatable" id="kt_apps_qrcode_list_datatable"></div>
                <!--end: Datatable -->
                <input id="user_role" value="@Model.UserBaseRole" hidden />
            </div>
        </div>



        <!--end::Portlet-->
        <!--begin::Modal-->
        <!--<partial name="_CodeInfoModal" />-->
        <partial name="_CreateBarcodeModal" model="@Model" />
        <partial name="_CreateMerchantCodeModal" model="@Model" />
        <partial name="_CreateTransactionCodeModal" model="@Model" />
        <partial name="_CreateBankCodeModal" model="@Model" />

        <partial name="_UpdateBarcodeModal" />
        <partial name="_UpdateBankCodeModal" />
        <partial name="_UpdateMerchantCodeModal" />
        <partial name="_UpdateTransactionCodeModal" model="@Model" />
        <partial name="_UpdateQrCodeSettingsModal" />
        <partial name="_UpdateQuotaLimitModal" />

        <partial name="_UserInfoModal" />
        <partial name="_QrCodeInfoModal" />


        <!--<partial name="_CreateMerchantCodeModal" model="@Model" />
            <partial name="_CreateTransactionCodeModal" model="@Model" />
            <partial name="_CreateBankCodeModal" model="@Model" />


            <partial name="_UpdateBarcodeDataModal" model="@Model" />
            <partial name="_UpdateMerchantDataModal" model="@Model" />
            <partial name="_UpdateTransactionDataModal" model="@Model" />
            <partial name="_UpdateBankDataModal" model="@Model" />


            <partial name="_UpdateQrCodeSettingsModal" model="@Model" />
            <partial name="_UpdateQrCodeQuotaModal" model="@Model" />
            <partial name="_UpdateQrCodeBaseInfoModal" model="@Model" />

            <partial name="_ResetRiskControlDataModal" model="@Model" />
    -->
        <!--end::Modal-->
    </div>
    <!-- end:: Content -->
</div>

@section AddToHead{
<link href="~/css/wizard/wizard-1.css" rel="stylesheet" type="text/css" />

}
@section Scripts {
    <!--begin::Page Scripts(used by this page) -->
    <script src="~/js/pages/qrcode-management/manual/list-datatable-qrcode.js" type="text/javascript"></script>
    <script src="~/js/shared/qrcode.js" type="text/javascript"></script>
    <script src="~/lib/metronic/dist/assets/js/pages/crud/forms/widgets/bootstrap-switch.js" type="text/javascript"></script>
