
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

    <div class="kt-content  kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" id="kt_content">


        <!-- begin:: Content Head -->
        <div class="kt-subheader  kt-grid__item" id="kt_subheader">
            <div class="kt-container  kt-container--fluid ">
                <div class="kt-subheader__main">
                    <h3 class="kt-subheader__title">
                        交易员列表
                    </h3>
                    <span class="kt-subheader__separator kt-subheader__separator--v"></span>
                    <div class="kt-subheader__group" id="kt_subheader_search">
                        <span class="kt-subheader__desc" id="kt_subheader_total">
                            共  笔
                        </span>


                        <!--begin::Search Box-->
                        <form class="kt-margin-l-20" id="kt_subheader_search_form">
                            <div class="kt-input-icon kt-input-icon--right kt-subheader__search">
                                <input type="text" class="form-control" placeholder="搜索..." id="generalSearch">
                                <input type="text" class="form-control" placeholder="搜索..." id="downlineSearch" style="display: none;">
                                <span class="kt-input-icon__icon kt-input-icon__icon--right">
                                    <span>
                                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1" class="kt-svg-icon">
                                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                                <rect x="0" y="0" width="24" height="24" />
                                                <path d="M14.2928932,16.7071068 C13.9023689,16.3165825 13.9023689,15.6834175 14.2928932,15.2928932 C14.6834175,14.9023689 15.3165825,14.9023689 15.7071068,15.2928932 L19.7071068,19.2928932 C20.0976311,19.6834175 20.0976311,20.3165825 19.7071068,20.7071068 C19.3165825,21.0976311 18.6834175,21.0976311 18.2928932,20.7071068 L14.2928932,16.7071068 Z" fill="#000000" fill-rule="nonzero" opacity="0.3" />
                                                <path d="M11,16 C13.7614237,16 16,13.7614237 16,11 C16,8.23857625 13.7614237,6 11,6 C8.23857625,6 6,8.23857625 6,11 C6,13.7614237 8.23857625,16 11,16 Z M11,18 C7.13400675,18 4,14.8659932 4,11 C4,7.13400675 7.13400675,4 11,4 C14.8659932,4 18,7.13400675 18,11 C18,14.8659932 14.8659932,18 11,18 Z" fill="#000000" fill-rule="nonzero" />
                                            </g>
                                        </svg>
                                        <!--<i class="flaticon2-search-1"></i>-->
                                    </span>
                                </span>
                            </div>
                        </form>
                        <!--end::Search Box-->
                        <!--begin::Nav Agent-->
                        <div class="kt-subheader__main" id="subheader_agent_navs">
                            <h3 class="kt-subheader__title">
                                &nbsp;&nbsp;&nbsp;&nbsp;
                            </h3>
                            <span class="kt-subheader__separator kt-hidden"></span>
                            <div class="kt-subheader__breadcrumbs" id="navs_agent">
                                <a href="#" id="navs_agent_home" class="kt-subheader__breadcrumbs-home" data-record-id=""><i class="flaticon2-shelter"></i></a>
                            </div>
                        </div>
                        <!--end::Nav Agent-->

                    </div>


                    <!--begin::Row Selection Tool Box-->
                    <div class="kt-subheader__group kt-hidden" id="kt_subheader_group_actions">
                        <div class="kt-subheader__desc"><span id="kt_subheader_group_selected_rows"></span> Selected:</div>
                        <div class="btn-toolbar kt-margin-l-20">
                            <div class="dropdown" id="kt_subheader_group_actions_status_change">
                                <button type="button" class="btn btn-label-brand btn-bold btn-sm dropdown-toggle" data-toggle="dropdown">
                                    更改状态
                                </button>
                                <div class="dropdown-menu">
                                    <ul class="kt-nav">
                                        <li class="kt-nav__section kt-nav__section--first">
                                            <span class="kt-nav__section-text">更改帐户状态为:</span>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link" data-toggle="status-change" data-status="1">
                                                <span class="kt-nav__link-text"><span class="kt-badge kt-badge--unified-success kt-badge--inline kt-badge--bold">启用</span></span>
                                            </a>
                                        </li>
                                        <li class="kt-nav__item">
                                            <a href="#" class="kt-nav__link" data-toggle="status-change" data-status="2">
                                                <span class="kt-nav__link-text"><span class="kt-badge kt-badge--unified-danger kt-badge--inline kt-badge--bold">停用</span></span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <button class="btn btn-label-success btn-bold btn-sm btn-icon-h" id="kt_subheader_group_actions_fetch" data-toggle="modal" data-target="#kt_datatable_records_fetch_modal">
                                查看纪录
                            </button>
                            <button class="btn btn-label-danger btn-bold btn-sm btn-icon-h" id="kt_subheader_group_actions_delete_all">
                                全部删除
                            </button>
                        </div>
                    </div>
                    <!--end::Row Selection Tool Box-->

                </div>
                <div class="kt-subheader__toolbar">
                    <a href="#" class="">
                    </a>
                    <div class="kt-section__content kt-section__content--solid">
                        <button id="switch_datatable_original" type="button" class="btn btn-info btn-elevate btn-pill"><i class="la la-copy"></i>普通浏览</button>&nbsp;
                        <button id="switch_datatable_navsagent" type="button" class="btn btn-outline-hover-info btn-elevate btn-pill"><i class="la la-copy"></i>层级浏览</button>&nbsp;
                    </div>
                    &nbsp;
                    &nbsp;
                    &nbsp;
                    &nbsp;
                    <a asp-controller="Trader" asp-action="Create" class="btn btn-label-brand btn-bold">
                        添加交易员
                    </a>
                </div>
            </div>
        </div>

        <!-- end:: Content Head -->
        <!-- begin:: Content -->
        <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
            <!--begin::Portlet-->
            <div class="kt-portlet kt-portlet--mobile">
                <div class="kt-portlet__body kt-portlet__body--fit">
                    <!--begin: Datatable -->
                    <div class="kt-datatable" id="kt_apps_trader_list_datatable"></div>
                    <div class="kt-datatable" id="kt_apps_downline_list_datatable"></div>
                    <!--end: Datatable -->
                    <input id="layer_user_id" value="" hidden />
                    <input id="layer_user_id_previous" value="" hidden />
                </div>
            </div>

            <!--end::Portlet-->
            <!--begin::Modal-->
            <div class="modal fade" id="kt_datatable_records_fetch_modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">选择的数据</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true"></span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="kt-scroll" data-scroll="true" data-height="200">
                                <ul id="kt_apps_user_fetch_records_selected"></ul>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-brand" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
            <partial name="_DownlineTraderDatatableModal" />
            <partial name="_BankbookRecordsDatatableModal" />
            <partial name="_RunningAccountRecordDatatableView" />
            <partial name="_FrozenBalanceDatatableModal" />

            <partial name="_ChangeBalanceModal" />
            <partial name="_UserInfoModal" />

            <!--end::Modal-->
        </div>
        <!-- end:: Content -->
    </div>

@section Scripts {
    <!--begin::Page Scripts(used by this page) -->
    <script src="~/js/pages/organization/trader/list-datatable-trader.js" type="text/javascript"></script>
    <script src="~/lib/metronic/dist/assets/js/pages/crud/forms/widgets/bootstrap-switch.js" type="text/javascript"></script>
    <!--end::Page Scripts -->
}

