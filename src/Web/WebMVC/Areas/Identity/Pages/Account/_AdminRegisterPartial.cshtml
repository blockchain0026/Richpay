@model WebMVC.Areas.Identity.Pages.Account.LoginModel.RegisterViewModel

@{
}

<div class="kt-login__signup">
    <div class="kt-login__head">
        <h3 class="kt-login__title">申请帐户</h3>
        <div class="kt-login__desc">输入详细信息来建立帐户:</div>
    </div>
    <form class="kt-form" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="input-group">
            <input class="form-control" asp-for="Email" type="text" name="email" placeholder="请输入电子邮件" autocomplete="off">
        </div>
        <div class="input-group">
            <input class="form-control" id="password" asp-for="Password" type="password" name="password"  placeholder="请输入密码">
        </div>
        <div class="input-group">
            <input class="form-control" asp-for="ConfirmPassword" type="password" name="rpassword" placeholder="确认密码">
        </div>
        <div class="row kt-login__extra">
            <div class="col kt-align-left">
                <label class="kt-checkbox">
                    <input type="checkbox" name="agree">我同意 <a href="#" class="kt-link kt-login__link kt-font-bold">服务条款</a>.
                    <span></span>
                </label>
                <span class="form-text text-muted"></span>
            </div>
        </div>
        <div class="kt-login__actions">
            <button type="submit" id="kt_login_signup_submit" class="btn btn-brand btn-elevate kt-login__btn-primary" asp-page-handler="Register">提交申请</button> &nbsp;&nbsp;
            <button id="kt_login_signup_cancel" class="btn btn-light btn-elevate kt-login__btn-secondary">取消</button>
        </div>
    </form>
</div>